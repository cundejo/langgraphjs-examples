# Automatically install peer dependencies without prompting
# This prevents installation failures when packages have peer dependencies
auto-install-peers=true

# Security: Disable lifecycle scripts (postinstall, preinstall, etc.)
# Prevents malicious scripts from executing during package installation
# Protects against supply chain attacks like the "Shai-Hulud" worms
ignore-scripts=true

# Security: Save exact dependency versions (e.g., "1.2.3" instead of "^1.2.3")
# Prevents automatic minor/patch updates that could introduce vulnerabilities
save-exact=true

# Security: Set empty prefix to ensure no ^ or ~ is added to versions
# Works together with save-exact to enforce exact version pinning
save-prefix=

# Security: Wait 24 hours (1440 minutes) before installing newly published packages
# Provides a safety window for the community to detect and report malicious packages
# Applies to all dependencies, including transitive ones
minimum-release-age=1440
